<main class="admin-main no-padding">
  <section class="admin-content">
    <div class="bg-dark m-b-30">
      <div class="container">
        <div class="row p-b-60 p-t-60">
          <div class="col-md-6 text-white p-b-30">
            <div class="media">
              <div class="media-body">
                <h1 className="text-center">#0000<%= manifest.id %> </h1>
                <h5>Number Plate: <%= manifest.motor.number_plate %></h5>
                <h5>Source Terminal: <%= manifest.source_terminal.name %></h5>
                <h5>
                  Destination Terminal: <%= manifest.destination_terminal.name %>
                </h5>
                <h5>Company name: <%= manifest&.company&.name || "" %></h5>
                <h5>Driver name: <%= (driver&.full_name || "").capitalize %></h5>
                <h5>Driver Number: <%= driver&.number || "" %></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="pull-up">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <div class="row m-b-20">
                  <div class="col-md-6 my-auto">
                    <h4 class="m-0">Manifest</h4>
                  </div>
                </div>
                <div class="row ">
                  <div class="col-md-12 p-0">
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead class="">
                          <tr>
                            <th scope="col">S/N</th>
                            <th scope="col">Type</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Source Terminal</th>
                            <th scope="col">Destination Terminal</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% manifest.manifest_people.each_with_index do |manifest_person, index| %>
                          <tr>
                           <td className="align-middle"><%= (index + 1)  %></td>
                            <td className="align-middle"><%= manifest_person.person.person_type  %></td>
                            <td className="align-middle">
                              <%= (manifest_person.person.full_name.presence || "").capitalize  %></td>
                            <td className="align-middle"><%= manifest_person.person.number  %></td>
                            <td className="align-middle">
                              <%= (manifest_person.source_terminal.name.presence || "").capitalize  %></td>
                            <td className="align-middle">
                              <%= (manifest_person.destination_terminal.name.presence || "").capitalize  %></td>
                          </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>